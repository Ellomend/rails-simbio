<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @nexus.each do |nexu| %>
      <tr>
        <td><%= nexu.name %></td>
        <td><%= link_to 'Show', nexu %></td>
